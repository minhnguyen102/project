extends ../../layouts/default.pug

block main
	h1 #{pageTitle}
	include ../../partials/list-button-user

	.row 
		each  user in users
			.col-6 
				div(class="box-user")
					div(class="inner-avatar")
						img(
							src=user.avatar
							alt=""
						)
					div(class="inner-infor")
						div(class="inner-name") #{user.fullname} - #{user.roleName.title}
						div(class="inner-buttons")
							button(
								class="btn btn-sm btn-success mr-2"
								btn-add-friend=user.id
							) Thêm
							button(
								class="btn btn-sm btn-danger mr-2"
								btn-cancel-friend=user.id
							) Hủy
					
block script 	
	script(src="/admin/js/user.js") 
					
					
	