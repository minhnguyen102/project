extends ../../layouts/default.pug

block main
    if(record.title)
        h1(class="mb-4") #{record.title}
    
    if (record.thumbnail)
        div(class="mb-4")
            img(
                src=record.thumbnail 
                style="width: 100px"
            )
    
    if(record.status)
        div(class="mb-4")
            span Trạng thái: 
            if (record.status === "active")
                span(class ="badge badge-success") Hoạt động
            else 
                span(class ="badge badge-danger") Dừng hoạt động
                
    if(record.description)
        div(class="mb-4") !{record.description}
    if(role.permissions.includes("products-category_edit"))
        a(
            href=`${prefixAdmin}/products-category/edit/${record.id}`
            class="btn btn-warning"
        ) Chỉnh sửa


    script(src="/admin/js/records.js") 