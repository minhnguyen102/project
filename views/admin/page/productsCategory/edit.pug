extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    +alert(5000)
    h1(class="mb-4") Chỉnh sửa thông tin danh mục sản phẩm

    form(
        action =`${prefixAdmin}/products-category/edit/${record.id}?_method=PATCH`
        id="form-edit-products-category"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=record.title
            )
        div(class="form-group")
            label(for="title") Danh mục cha
            input(
                type="text"
                class="form-control"
                id="parent"
                name="parent"
                value=record.parent
            )
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                name="description"
                id="my-expressjs-tinymce-app"
                rows="5"
            ) !{record.description}
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            div(
                class= "image-container"
            )
                img(
                    src=record.thumbnail
                    upload-image-preview
                    class="image-preview"
                )
                button(id="button-close-image") X
             
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked = (record.status == "active"  ? true : false)
            )
            label(for="statusActive" class="form-check-lable") Hoạt động 
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
                checked = (record.status == "inactive" ? true : false)
            )
            label(for="statusInactive" class="form-check-lable") Dừng hoạt động 
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật

    script(src="/admin/js/products.js")
    <script type="application/javascript" src= "/tinymce/tinymce.min.js"></script>
    //- <!-- Script element sourcing the TinyMCE configuration -->
    <script type="application/javascript" src= "/admin/js/my-tinymce-config.js"></script> 