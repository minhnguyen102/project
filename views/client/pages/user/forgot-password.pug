extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
include ../../mixins/products-layout.pug

block main
    +alert(5000)
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center 
            .col-8
                h1(class="text-center") Lấy lại mật khẩu
                form(
                    action="/user/password/forgot"
                    method="POST"
                )
                    div(class="form-group")
                        lable(for="email") Email 
                        input(
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            required
                        )

                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Gửi mail xác nhận