extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
include ../../mixins/products-layout.pug

block main
    +alert-error(5000)

    .container.my-5 
        .row.justify-content-center
            .col-8 
                h1(class="text-center") Xác thực otp
                form(
                    action="/user/password/otp"
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                            value=email
                            required
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") OTP
                        input(
                            type="text"
                            class="form-control"
                            id="otp"
                            name="otp"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Gửi xác nhận