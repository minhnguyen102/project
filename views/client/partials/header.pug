include ../mixins/sub-menu.pug

header.header 
    .container
        .row.align-items-center 
            .col-3 
                .inner-logo 
                    a(href="/")
                        img(src="/images/fresh-garden.jpg", alt="logo") 

            .col-5 
                form(
                    action='/search'
                    method="GET"
                )
                    div(class="gorm-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa tìm kiếm..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                            autocomplete="off"
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm

            .col-4 
                .inner-menu 
                    ul 
                        li
                            a(href="/") Trang chủ
                        
                        li(class="sub-menu")
                            -const pathProducts = "/products";
                            a(href=pathProducts) Sản phẩm
                                +sub-menu(productsCategory, pathProducts)
                        li
                            a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalOrder : "0"})
                        li
                            a(href="/user/register") Đăng ký
                        li
                            a(href="/user/login") Đăng nhập